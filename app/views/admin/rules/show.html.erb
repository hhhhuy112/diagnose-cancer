<% provide :title, t("admin.knowledges.information_knowledge") %>
<div class = "row">
  <div class = "block-title">
  </div>
  <div class = "block-content-full">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= t"admin.data_cancers.information_data_cancer" %>
        </h3>
      </div>
      <div class="panel-body">
        <table class="table table-hover">
          <tbody>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("knowledges.fiction") %>
                </strong>
              </td>
              <td><%= @knowledge.fiction_name %></td>
            </tr>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("knowledges.value") %>
                </strong>
              </td>
              <td><%= @knowledge.value %></td>
            </tr>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("knowledges.classification") %>
                </strong>
              </td>
              <td><%= @knowledge.classification_name %></td>
            </tr>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("knowledges.probability") %>
                </strong>
              </td>
              <td>
                <%= @knowledge.probability %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <% if current_user.admin?%>
          <%= link_to admin_knowledges_path, class: "btn btn-default" do %>
            <i class="fa fa-chevron-left"></i> <%= t "list_data_cancer" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

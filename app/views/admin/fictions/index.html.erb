<% provide :title, t("admin.fictions.title") %>
<div class = "row">
  <div class = "block-content-full">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= t"admin.fictions.list_fictions" %>
        </h3>
      </div>
      <div class="panel-body">
        <% if current_user.admin? %>
          <div class="row manage_user">
            <div class="col-md-offset-8 col-md-4">
              <%= render "search_form" %>
            </div>
          </div>
        <% end %>
        <div class="table-responsive">
          <table class="table table-bordered table-hover">
            <thead class = "header-table-fictions">
              <%= render "table_header" %>
            </thead>
            <tbody class = "fictions-content">
              <% if @fictions.present? %>
                <%= render(@fictions) %>
              <% else %>
                <div class = "col-md-4 text-danger">
                  <i class="fa fa-fw fa-exclamation-triangle"></i>
                  <strong><%= t(".data_not_find") %></strong>
                </div>
              <% end %>
            </tbody>
          </table>
        </div>
        <center class = "paginate-items"><%= paginate @fictions %></center>
      </div>
    </div>
  </div>
</div>


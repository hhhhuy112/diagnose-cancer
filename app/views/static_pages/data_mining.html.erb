<section class="site-content site-section">
    <div class="container">
        <!-- Project Navigation -->
        <div class="site-block clearfix">
            <div class="btn-group pull-right">
                <%= link_to data_mining_path, class: "btn btn-primary" do %>
                    <i class="fa fa-chevron-left"></i> Prev
                <% end %>
                 <%= link_to data_mining_path, class: "btn btn-primary" do %>
                    <i class="fa fa-chevron-right"></i> Next
                <% end %>
            </div>
            <%= link_to root_path, class: "btn btn-primary pull-left"  do %>
                <i class="fa fa-th-large"></i>
                <%= t("home")%>
            <% end %>
        </div>
        <!-- END Project Navigation -->

        <!-- Project Info -->
        <div class="row">
            <!-- Project Slider -->
            <div class="col-sm-5 site-block">
                <div id="project-carousel" class="carousel slide" data-ride="carousel" data-interval="3000">
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner text-center">
                        <div class="active item">
                            <%= image_tag "home/d1.jpg" %>
                        </div>
                        <div class="item">
                            <%= image_tag "home/d2.jpg" %>
                        </div>
                        <div class="item">
                            <%= image_tag "home/d3.jpg" %>
                        </div>
                    </div>
                    <!-- END Wrapper for slides -->

                    <!-- Controls -->
                    <a class="left carousel-control" href="#project-carousel" data-slide="prev">
                        <span>
                            <i class="fa fa-chevron-left"></i>
                        </span>
                    </a>
                    <a class="right carousel-control" href="#project-carousel" data-slide="next">
                        <span>
                            <i class="fa fa-chevron-right"></i>
                        </span>
                    </a>
                    <!-- END Controls -->
                </div>

                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <td style="width: 50%;"><strong>Source</strong></td>
                            <td class="text-right">Wikipedia</td>
                        </tr>
                        <tr>
                            <td><strong>Category</strong></td>
                            <td class="text-right">Data mining</td>
                        </tr>
                        <tr>
                            <td><strong>Website</strong></td>
                            <td class="text-right"><a href="javascript:void(0)">https://en.wikipedia.org/wiki/Data_mining</a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- END Project Slider -->

            <!-- Project Details -->
            <div class="col-sm-7 site-block">
                <h3 class="site-heading"><strong><%= t("home_infor.quest_first") %></strong><%= t("home_infor.data_mining") %></h3>
                   <%= @about.description.html_safe %>
             </div>
            <!-- END Project Details -->
        </div>
        <!-- END Project Info -->
        <hr>
    </div>
</section>
<!-- END Content -->

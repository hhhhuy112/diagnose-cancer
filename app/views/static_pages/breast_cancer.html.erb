<section class="site-content site-section">
    <div class="container">
        <!-- Project Navigation -->
        <div class="site-block clearfix">
            <div class="btn-group pull-right">
                <%= link_to data_set_path, class: "btn btn-primary" do %>
                    <i class="fa fa-chevron-left"></i> Prev
                <% end %>
                 <%= link_to data_mining_path, class: "btn btn-primary" do %>
                    <i class="fa fa-chevron-right"></i> Next
                <% end %>
            </div>
            <%= link_to root_path, class: "btn btn-primary pull-left"  do %>
                <i class="fa fa-th-large"></i>
                <%= t("home")%>
            <% end %>
        </div>
        <!-- END Project Navigation -->
        <!-- Project Info -->
        <div class="row">
            <!-- Project Slider -->
            <div class="col-sm-5 site-block">
                <div id="project-carousel" class="carousel slide" data-ride="carousel" data-interval="3000">
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner text-center">
                        <div class="active item">
                            <%= image_tag "home/b1.jpg" %>
                        </div>
                        <div class="item">
                            <%= image_tag "home/b2.jpg" %>
                        </div>
                        <div class="item">
                            <%= image_tag "home/b3.jpg" %>
                        </div>
                    </div>
                    <!-- END Wrapper for slides -->

                    <!-- Controls -->
                    <a class="left carousel-control" href="#project-carousel" data-slide="prev">
                        <span>
                            <i class="fa fa-chevron-left"></i>
                        </span>
                    </a>
                    <a class="right carousel-control" href="#project-carousel" data-slide="next">
                        <span>
                            <i class="fa fa-chevron-right"></i>
                        </span>
                    </a>
                    <!-- END Controls -->
                </div>

                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <td style="width: 50%;"><strong><%= t "home_infor.source" %></strong></td>
                            <td class="text-right"><%= @about.source %></td>
                        </tr>
                        <tr>
                            <td><strong><%= t "home_infor.category" %></strong></td>
                            <td class="text-right"><%= t "home_infor.infor_breast_cancer" %></td>
                        </tr>
                        <tr>
                            <td><strong>Website</strong></td>
                            <td class="text-right"><a href="javascript:void(0)"><%= @about.link %></a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- END Project Slider -->

            <!-- Project Details -->
            <div class="col-sm-7 site-block">
                <h3 class="site-heading"><strong><%= t("home_infor.quest_first") %></strong><%= t("home_infor.breast_cancer") %></h3>
                   <% if is_locale_en? %>
                    <%= @about.description.html_safe  if @about.description.present? %>
                   <% else %>
                    <%= @about.description_vi.html_safe if @about.description_vi.present? %>
                   <% end %>
             </div>
            <!-- END Project Details -->
        </div>
        <!-- END Project Info -->
        <hr>
         <!-- Key Features -->
            <section class="site-content site-section">
                <div class="container">
                    <div class="row">
                        <% @fictions.each do |fiction| %>
                            <div class="col-sm-4 site-block">
                                <h3 class="site-heading"><i class="fa fa-check text-success animation-pulse"></i> <strong><%= fiction.name %></strong></h3>
                                <% if is_locale_en? %>
                                    <p class="remove-margin"><%= fiction.description.html_safe if fiction.description.present? %></p>
                                <% else %>
                                    <p class="remove-margin"><%= fiction.description_vi.html_safe if fiction.description_vi.present? %></p>
                                <% end %>
                            </div>
                        <% end %>
                    </div>
                    <hr>
                </div>
            </section>
            <!-- END Key Features -->
    </div>

</section>
<!-- END Content -->

  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">
        <%= t"dashboard.users.title_profile" %>
      </h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-3 col-lg-3 " align="center">
          <%= image_tag @user.avatar.url, class: "height-250" %>
        </div>
        <div class=" col-md-9 col-lg-9 ">
          <table class="table table-hover">
            <tbody>
              <tr>
                <td>
                  <strong>
                    <i class="fa fa-user-o"></i> <%= t "name" %>
                  </strong>
                </td>
                <td><%= @user.name %></td>
              </tr>
              <tr>
                <td>
                  <strong>
                    <i class="fa fa-envelope-o"></i> <%= t "email" %>
                  </strong>
                </td>
                <td><%= @user.email %></td>
              </tr>
              <tr>
                <td>
                  <strong>
                    <i class="fa fa-transgender"></i> <%= t "gender" %>
                  </strong>
                </td>
                <td><%= t "#{@user.gender}" %></td>
              </tr>
              <tr>
                <td>
                  <strong>
                    <i class="fa fa-birthday-cake"></i> <%= t "birthday" %>
                  </strong>
                </td>
                <td>
                  <%= l @user.birthday, format: :date_month_year_v1 if @user.birthday %>
                </td>
              </tr>
            </tbody>
          </table>
          <% if @user.is_user? current_user %>
            <%= link_to t("dashboard.users.edit_password"), edit_user_registration_path,
              class: "btn btn-primary" %>
          <% end %>
          <% if @user.is_user? current_user %>
            <% if current_user.admin?%>
              <%= link_to t("dashboard.users.edit_profile"),
                edit_admin_user_path(current_user), class: "btn btn-primary" %>
            <% else %>
              <%= link_to t("dashboard.users.edit_profile"),
                edit_user_path(current_user), class: "btn btn-primary" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
    <div class="row">
      <div class="col-md-3">
        <% if current_user.admin?%>
          <%= link_to admin_users_path, class: "btn btn-default" do %>
            <i class="fa fa-chevron-left"></i> <%= t "dashboard.users.list_user" %>
          <% end %>
        <% else %>
          <%= link_to edit_users_path, class: "btn btn-default" do %>
            <i class="fa fa-chevron-left"></i> <%= t "dashboard.users.list_user" %>
          <% end %>
        <% end %>
      </div>
    </div>


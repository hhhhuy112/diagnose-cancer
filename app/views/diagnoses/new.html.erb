<% provide :title, t("admin.users.edit_user") %>
<div class = "row">
  <div class = "block-content-full">
    <div class="panel panel-info">
      <% if current_user.admin? %>
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= t"diagnoses.diagnose" %>
        </h3>
      </div>
      <% end %>
      <div class="panel-body">
        <div class = "section-infor col-md-offset-2 col-md-8">
          <%= render "form_diagnose" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <% if current_user.admin?%>
      <%= link_to admin_diagnoses_path, class: "btn btn-default" do %>
      <i class="fa fa-chevron-left"></i> <%= t "diagnose.list_diagnoses" %>
      <% end %>
      <% end %>
    </div>
  </div>
</div>
</div>

<% provide :title, t("admin.diagnoses.information_diagnoses") %>
<div class = "row">
  <div class = "block-title">
  </div>
  <div class = "block-content-full">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= t"admin.diagnoses.information_diagnoses" %>
        </h3>
      </div>
      <div class="panel-body">
        <div class = "col-md-6">
          <table class="table table-hover">
          <tbody>
            <% @data_users.each do |data_user| %>
              <tr>
                <td>
                  <strong>
                    <i class="fa fa-star"></i> <%= data_user.fiction_name %>
                  </strong>
                </td>
                <td><%= data_user.value %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
        <div class = "col-md-6">
          <table class="table table-hover">
          <tbody>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("diagnose.created_at") %>
                </strong>
              </td>
              <td><%= l @diagnose.created_at, format: :format_datetime_picker_rb %></td>
            </tr>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("diagnose.user") %>
                </strong>
              </td>
              <td><%= @diagnose.user_name %></td>
            </tr>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("diagnose.classification") %>
                </strong>
              </td>
              <td><%= @diagnose.classification_name %></td>
            </tr>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("diagnose.result") %>
                </strong>
              </td>
              <td>
                <%= @diagnose.result %>
              </td>
            </tr>
          </tbody>
        </table>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <% if current_user.admin?%>
          <%= link_to admin_diagnoses_path, class: "btn btn-default" do %>
            <i class="fa fa-chevron-left"></i> <%= t "diagnose.list_diagnoses" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>


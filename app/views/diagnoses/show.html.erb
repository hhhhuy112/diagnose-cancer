<% provide :title, t("admin.diagnoses.information_diagnoses") %>
<div class = "row">
  <div class = "block-title">
  </div>
  <div class = "block-content-full">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= t"admin.data_cancers.information_data_cancer" %>
        </h3>
      </div>
      <div class="panel-body">
        <div class = "col-md-6">
          <table class="table table-hover">
          <tbody>
            <% @data_users.each do |data_user| %>
              <% if data_user.value.present? %>
                <tr>
                  <td>
                    <strong>
                      <i class="fa fa-star"></i> <%= data_user.fiction_name %>
                    </strong>
                  </td>
                  <td><%= data_user.value %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
        </div>
        <div class = "col-md-6">
          <table class="table table-hover">
          <tbody>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("diagnose.created_at") %>
                </strong>
              </td>
              <td><%= l @diagnose.created_at, format: :long if @diagnose.created_at %></td>
            </tr>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("diagnose.value") %>
                </strong>
              </td>
              <td>
                <a href="javascript:void(0)" class="label label-info animation-pulse"><%= @diagnose.patient_name %></a>
              </td>
            </tr>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("diagnose.classification") %>
                </strong>
              </td>
              <td>
                <% if @diagnose.classification_id.present? %>
                  <% if @diagnose.classification_id == 1 %>
                    <a href="javascript:void(0)" class="label label-success animation-pulse"><%= @diagnose.classification_name %></a>
                  <% else %>
                    <a href="javascript:void(0)" class="label label-danger animation-pulse"><%= @diagnose.classification_name %></a>
                  <% end %>
                <% else %>
                  <a href="javascript:void(0)" class="label label-warning animation-pulse"><%= t "admin.diagnoses.not_condition" %></a>
                <% end %>
              </td>
            </tr>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("diagnose.type_diagnose") %>
                </strong>
              </td>
              <td><%= get_str_type_diagnose @diagnose %></td>
            </tr>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("diagnose.value") %>
                </strong>
              </td>
              <td><%= @diagnose.owner_name %></td>
            </tr>
          </tbody>
        </table>
        </div>
         <% if current_user.id == @diagnose.owner_id %>
          <div class = "col-md-12">
            <%= link_to t("admin.diagnoses.update_diagnose"), edit_diagnosis_path(@diagnose),
              class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row area-back">
      <div class="col-md-3">
          <%= link_to diagnoses_path, class: "btn btn-default" do %>
            <i class="fa fa-chevron-left"></i> <%= t "list_data_cancer" %>
          <% end %>
      </div>
    </div>
  </div>
</div>


<% provide :title, t("admin.users.information_user") %>
<div class = "row">
  <div class = "block-title">

  </div>
  <div class = "block-content-full">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= t"dashboard.users.title_profile" %>
        </h3>
      </div>
      <div class="panel-body">
        <table class="table table-hover">
          <tbody>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("clump_thickness") %>
                </strong>
              </td>
              <td><%= @data_cancer.clump_thickness %></td>
            </tr>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("uniformity_of_cell_size") %>
                </strong>
              </td>
              <td><%= @data_cancer.uniformity_of_cell_size %></td>
            </tr>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("uniformity_of_cell_shape") %>
                </strong>
              </td>
              <td><%= @data_cancer.uniformity_of_cell_shape %></td>
            </tr>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("marginal_adhesion") %>
                </strong>
              </td>
              <td>
                <%= @data_cancer.marginal_adhesion %>
              </td>
            </tr>

            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%=  t("single_epithelial_cell_size") %>
                </strong>
              </td>
              <td>
                <%= @data_cancer.single_epithelial_cell_size %>
              </td>
            </tr>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("bare_nuclei") %>
                </strong>
              </td>
              <td>
                <%= @data_cancer.bare_nuclei %>
              </td>
            </tr>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("bland_chromatin") %>
                </strong>
              </td>
              <td>
                <%= @data_cancer.band_romatin %>
              </td>
            </tr>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("normal_nucleoli") %>
                </strong>
              </td>
              <td>
                <%= @data_cancer.nomal_nucleoli %>
              </td>
            </tr>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("mitoses") %>
                </strong>
              </td>
              <td>
                <%= @data_cancer.mitoses %>
              </td>
            </tr>
            <tr>
              <td>
                <strong>
                  <i class="fa fa-star"></i> <%= t("result") %>
                </strong>
              </td>
              <td>
                <%= @data_cancer.classification.name %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <% if current_user.admin?%>
          <%= link_to admin_data_cancers_path, class: "btn btn-default" do %>
            <i class="fa fa-chevron-left"></i> <%= t "list_data_cancer" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="col-md-8 col-sm-6 col-xs-12 personal-info">
  <%= f.hidden_field :fiction_id, class: "form-control input-md field-compulsory-before",
        placeholder: t("name") %>
  <div class="form-group">
    <%= f.label :fiction_id,  data_user.fiction.name,
      class: "col-md-3 control-label field-compulsory-before" %>
    <div class="col-md-5">
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-user"></i>
        </div>
        <%= f.select :value, DataCancer.values.collect { |k,v| [k, v] }, {}, {class: "form-control input-md"} %>
      </div>
    </div>
  </div>
</div>
